{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["es6"],
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@types/*": ["types/*"],
      "@types": ["types"],
      "@middleware/*": ["middleware/*"],
      "@middleware": ["middleware"],
      "@models": ["models"],
      "@controllers": ["controllers"],
      "@validators/*": ["validators/*"],
      "@validators": ["validators"],
      "@routes": ["routes"],
      "@configs": ["configs"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src"
  },
  "lib": ["es2015"],
  "exclude": ["dist", "node_modules"],
  "include": [".eslintrc.cjs", "./src/**/*", "./*.d.ts", "types/index.d.ts"]
}
