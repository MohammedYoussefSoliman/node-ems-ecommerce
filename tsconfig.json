{
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "ESNext",
    "lib": ["es6"],
    "moduleResolution": "node",
    "sourceMap": true,
    "paths": {
      "@utils/*": ["utils/*"],
      "@utils": ["utils"],
      "@interfaces/*": ["interfaces/*"],
      "@interfaces": ["interfaces"],
      "@middleware/*": ["middleware/*"],
      "@middleware": ["middleware"],
      "@models": ["models"],
      "@controllers": ["controllers"],
      "@configs": ["configs"]
    },
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": "./src"
  },
  "lib": ["es2015"],
  "exclude": ["dist", "node_modules"],
  "include": [".eslintrc.cjs", "./src/**/*"]
}
